# .clang-tidy
Checks: >
  -*,
  clang-diagnostic-*,
  bugprone-*,
  clang-analyzer-*,
  concurrency-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  google-build-using-namespace,       # Disallow using namespace in global scope:contentReference[oaicite:61]{index=61}
  cppcoreguidelines-*,
  # Disable checks that conflict with our style or are too strict
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-owning-memory,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-special-member-functions,
  -readability-magic-numbers,
  -readability-implicit-bool-conversion,
  -modernize-use-auto,                # Don't encourage auto for basic types:contentReference[oaicite:62]{index=62}
  -modernize-use-trailing-return-type

CheckOptions:
  # Naming conventions
  - key: readability-identifier-naming.NamespaceCase
    value: lower_case                  # namespace names in lower_case
  - key: readability-identifier-naming.ClassCase
    value: CamelCase                   # Classes/Structs in PascalCase:contentReference[oaicite:63]{index=63}
  - key: readability-identifier-naming.EnumCase
    value: CamelCase                   # Enums in PascalCase
  - key: readability-identifier-naming.FunctionCase
    value: camelBack                   # Functions/Methods in camelCase:contentReference[oaicite:64]{index=64}
  - key: readability-identifier-naming.VariableCase
    value: camelBack                   # Variables in camelCase:contentReference[oaicite:65]{index=65}
  - key: readability-identifier-naming.ParameterCase
    value: camelBack                   # Parameters in camelCase
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: "_"                        # Prefix private members with '_':contentReference[oaicite:66]{index=66}
  - key: readability-identifier-naming.PrivateMemberCase
    value: camelBack                  # Private/Protected members in camelCase:contentReference[oaicite:67]{index=67}
  - key: readability-identifier-naming.ProtectedMemberPrefix
    value: "_"
  - key: readability-identifier-naming.ProtectedMemberCase
    value: camelBack
  - key: readability-identifier-naming.PublicMemberCase
    value: camelBack                  # Public data members (if any) in camelCase
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_CASE                 # Constants in UPPER_CASE_WITH_UNDERSCORES:contentReference[oaicite:68]{index=68}
  - key: readability-identifier-naming.MacroDefinitionCase
    value: UPPER_CASE
  - key: readability-identifier-naming.EnumConstantCase
    value: CamelCase                  # Enum values in PascalCase

  # Modern C++ preferences
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'                     # Treat NULL as null-pointer (convert to nullptr):contentReference[oaicite:69]{index=69}
  - key: modernize-loop-convert.MinConfidence
    value: reasonable
  - key: modernize-avoid-c-arrays.AllowStringArrays
    value: 'true'

  # Readability and other checks
  - key: readability-function-cognitive-complexity.Threshold
    value: '20'
  - key: readability-identifier-length.MinimumVariableNameLength
    value: '1'                        # Allow 1-char names like i, j, x, y in context:contentReference[oaicite:70]{index=70}

  - key: performance-move-const-arg.CheckTriviallyCopyable
    value: 'true'
