# .clang-format
# Base style: Google with adaptations for course code style
BasedOnStyle: Google
Language: Cpp
Standard: c++20

# === Indentation & line length ===
IndentWidth: 4              # 4 spaces indent (no tabs):contentReference[oaicite:56]{index=56}
TabWidth: 4
UseTab: Never               # Always use spaces:contentReference[oaicite:57]{index=57}
NamespaceIndentation: None  # Don't indent inside namespaces:contentReference[oaicite:58]{index=58}
ColumnLimit: 110            # Max line width 110 chars

# === Braces & short statements ===
BreakBeforeBraces: Allman   # Opening brace on new line (Allman style):contentReference[oaicite:59]{index=59}
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AllowShortFunctionsOnASingleLine: false

# === Pointers & references ===
PointerAlignment: Left      # Attach '*' to type (e.g. int* ptr):contentReference[oaicite:60]{index=60}
ReferenceAlignment: Pointer # Align '&' like pointers (e.g. int& ref)

# === Spaces ===
SpaceBeforeParens: ControlStatements   # Space before '(' in if/for/while
SpacesInParentheses: false
SpacesInSquareBrackets: false
SpaceInEmptyParentheses: false
SpacesInAngles: false

# === Alignment ===
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: Consecutive   # Align consecutive assignment operators
AlignConsecutiveDeclarations: None
AlignOperands: Align
AlignTrailingComments: true

# === Function calls & lists ===
BinPackArguments: true
BinPackParameters: true
Cpp11BracedListStyle: true

# === Includes ===
SortIncludes: true            # Sort includes alphabetically
IncludeBlocks: Regroup        # Group includes (system vs project)

# === Constructors ===
BreakConstructorInitializers: BeforeComma
ConstructorInitializerIndentWidth: 4
ContinuationIndentWidth: 8

# === Comments ===
ReflowComments: true          # Wrap long comments automatically
